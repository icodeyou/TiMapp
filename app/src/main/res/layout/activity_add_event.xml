<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="android.graphics.drawable.Drawable"/>
        <variable
            name="errors"
            type="com.timappweb.timapp.rest.model.RestValidationErrorParser"></variable>
        <variable
            name="event"
            type="com.timappweb.timapp.data.models.Event"></variable>
        <variable
            name="address"
            type="String"></variable>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddSpotActivity"
        android:orientation="vertical"
        android:background="@color/background">

        <include
            layout="@layout/toolbar_layout_secondary" />

        <LinearLayout
            android:id="@+id/progress_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:background="@color/background">
            <include layout="@layout/progress_view_secondary"
                android:layout_width="@dimen/default_progressview"
                android:layout_height="@dimen/default_progressview"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.timappweb.timapp.views.CategorySelectorView
                    android:id="@+id/category_selector"
                    app:color_background="@color/colorSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <!--<FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorSecondary">
                    style="@style/whiteFormEditText"
                </FrameLayout>-->

                <com.rengwuxian.materialedittext.MaterialEditText
                    xmlns:app="http://schemas.android.com/tools"
                    android:id="@+id/event_name"
                    style="@style/labeledFormEditText"
                    android:hint="@string/hint_event_name"
                    android:nextFocusForward="@+id/description_edit_text"
                    android:text="@={event.name}"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    xmlns:app="http://schemas.android.com/tools"
                    android:id="@+id/description_edit_text"
                    style="@style/formLabeledMultilineText"
                    android:hint="@string/hint_write_description"
                    android:text="@={event.description}"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spot_height_add_event"
                    android:layout_margin="10dp">
                    <com.google.android.gms.maps.MapView
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <LinearLayout
                        android:id="@+id/button_add_spot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:visibility="@{event.hasSpot() ? View.GONE : View.VISIBLE}"
                        android:background="@color/smoke">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="10dp"
                            android:src="@drawable/plus_grey"/>

                        <TextView
                            style="@style/TextInfoGray"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="20dp"
                            android:gravity="center"
                            android:text="Attach a place"/>

                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/spot_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="visible"
                    android:background="@color/smoke">
                    <include layout="@layout/layout_spot"
                        bind:spot="@{event.spot}"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>