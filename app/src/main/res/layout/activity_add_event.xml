<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="android.graphics.drawable.Drawable"/>
        <variable
            name="errors"
            type="com.timappweb.timapp.rest.model.RestValidationErrors"></variable>
        <variable
            name="event"
            type="com.timappweb.timapp.data.models.Event"></variable>
        <variable
            name="address"
            type="String"></variable>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:background="@color/background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".AddSpotActivity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorSecondary">
                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/event_name"
                            style="@style/whiteFormEditText"
                            app:met_base_color="@color/white"
                            android:hint="@string/hint_place_name"
                            android:text="@={event.name}"/>
                    </android.support.v7.widget.Toolbar>

                    <LinearLayout
                        android:id="@+id/rv_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp">
                        <android.support.v7.widget.RecyclerView
                            android:layout_marginTop="5dp"
                            android:id="@+id/rv_categories"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <ImageButton
                            android:id="@+id/more_button"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/ellipsis"
                            android:contentDescription="@string/more"
                            android:drawablePadding="5dp"
                            android:theme="@style/BlueButton"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/formGroup">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/comment_edit_text"
                        style="@style/formMultilineText"
                        android:hint="@string/hint_write_description"
                        android:text="@={event.description}"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/formGroup">

                    <include layout="@layout/layout_spot"
                        bind:spot="@{event.spot}"
                        android:id="@+id/spot_container"></include>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/map_min_height">
                        <com.google.android.gms.maps.MapView
                            android:id="@+id/map"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/smoke">
                            <ProgressBar
                                style="@style/imageIcon"
                                android:layout_gravity="center"
                                android:visibility="@{event.hasAddress() || address != null ? View.GONE : View.VISIBLE}"/>

                            <TextView
                                style="@style/TextInfo"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:singleLine="false"
                                android:text="@{event.hasAddress() ? event.getAddress() : (address != null ? address : @string/loading_address)}"
                                tools:text="182 washington street, Manhatan, New York"/>
                        </LinearLayout>
                        <Button
                            android:id="@+id/button_add_spot"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:drawableLeft="@drawable/pin_white"
                            android:drawableStart="@drawable/pin_white"
                            android:text="@string/formAddEventButtonAddSpot"
                            android:theme="@style/BlueButton"/>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/progress_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:background="@color/background">
                </LinearLayout>

                <Button
                    android:id="@+id/create_button"
                    style="@style/pageSubmitButton"
                    android:text="Post"/>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</layout>