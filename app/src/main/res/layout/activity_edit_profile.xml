<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorPrimary">

    <include android:id="@+id/toolbar_transparent" layout="@layout/toolbar_transparent" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_huge"
            android:text="Define yourself"
            android:typeface="serif"
            android:textColor="@color/White"
            android:layout_marginTop="20dp"
            android:gravity="center"/>

    <com.timappweb.timapp.views.HorizontalTagsRecyclerView
        android:id="@+id/selected_tags_profile"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="50dp" />


    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_et_edit_first_profile"
        android:singleLine="true"
        android:textColorHint="@color/Gray"
        android:textColor="@color/White"
        android:textSize="@dimen/text_huge"/>

    <LinearLayout
        android:id="@+id/skip_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:text="skip"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/submit_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/border_radius_white"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_big"
            android:text="Submit"
            android:visibility="visible"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/White"
                android:text="@string/edit_first_profile1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center"
                android:textColor="@color/White"
                android:text="@string/edit_first_profile2"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>