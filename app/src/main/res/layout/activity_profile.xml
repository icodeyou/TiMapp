<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <include layout="@layout/progressbar"
            android:layout_height="80dp"
            android:layout_width="80dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/no_connection_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_phone_connection"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal"
            android:gravity="center"
            android:text="@string/cannot_load_profile"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/loaded_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="@color/background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@color/colorLightPrimary"
                android:gravity="bottom">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_profile_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_big"
                            android:textColor="@color/Black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="22 years old"
                            android:textSize="@dimen/text_normal"
                            android:textColor="@color/Black"/>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/half_profile_picture_side"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="@dimen/logo_big"
                            android:layout_height="@dimen/logo_big"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_hashtag"/>
                        <TextView
                            android:id="@+id/tags_counter"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/text_big"
                            android:textColor="@color/Black"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/post_shared"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/Black"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/LightGrey"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="@dimen/logo_big"
                            android:layout_height="@dimen/logo_big"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_location"/>
                        <TextView
                            android:id="@+id/places_counter"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/text_big"
                            android:textColor="@color/Black"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/places_created"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/Black"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_tags_profile"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/background">
                <TextView
                    android:id="@+id/tv_tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="@dimen/text_big"
                    android:textColor="@color/Goldenrod"/>
                <TextView
                    android:id="@+id/tv_tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="#party"
                    android:textSize="@dimen/text_big"
                    android:textColor="@color/Goldenrod"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/background_defined_tags"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_tag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="@dimen/text_big"
                    android:textColor="@color/Goldenrod"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:text="@string/text_last_post"
                android:textColor="@color/Gray"
                android:textSize="@dimen/text_normal"/>
            <ListView
                android:id="@+id/place_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="@dimen/profile_picture_side"
            android:layout_height="@dimen/profile_picture_side"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_chineseman"/>
    </RelativeLayout>
</LinearLayout>