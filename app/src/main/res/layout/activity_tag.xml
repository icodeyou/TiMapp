        <!-- Separator Top -->
        <!-- **********************************************************************-->
        <View
            android:id="@+id/top_line_hrv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"/>

        <!-- SELECTED TAGS -->
        <!-- **********************************************************************-->
        <com.timappweb.timapp.views.HorizontalTagsRecyclerView
            xmlns:myattrs="http://schemas.android.com/apk/res/com.timappweb.timapp"
            android:id="@+id/rv_selected_tags"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_rv_displayed_tags"
            myattrs:text_color="@color/colorAccent"
            myattrs:background_color="@color/background"/>

        <!-- Separator Bottom -->
        <!-- **********************************************************************-->
        <View
            android:id="@+id/bottom_line_hrv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"/>

        <LinearLayout
            android:id="@+id/progress_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <include layout="@layout/progressbar"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </LinearLayout>

        <!-- SUGGESTED TAGS -->
        <!-- **********************************************************************-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.greenfrvr.hashtagview.HashtagView
                android:id="@+id/rv_search_suggested_tags"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"

                app:tagTextSize="@dimen/text_normal"
                app:tagTextGravity="center"

                app:tagBackground="@drawable/tag_background"

                app:dynamicMode="true"

                app:tagEllipsize="marquee"
                app:tagPaddingBottom="@dimen/tag_padding"
                app:tagPaddingLeft="@dimen/tag_padding"
                app:tagPaddingRight="@dimen/tag_padding"
                app:tagPaddingTop="@dimen/tag_padding"
                app:rowMargin="@dimen/tag_margin"
                app:tagMargin="@dimen/tag_margin"
                app:tagTextColor="@color/White"
                />

        </ScrollView>

        <!-- PLACE -->
        <!-- **********************************************************************-->
        <ListView
            android:id="@+id/place_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <include android:id="@+id/toolbar_transparent"
        layout="@layout/toolbar_transparent" />

</RelativeLayout>