<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="android.graphics.drawable.Drawable"/>
        <variable
            name="spot"
            type="com.timappweb.timapp.data.models.Spot"></variable>
    </data>
<LinearLayout
    android:id="@+id/layout_spot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:visibility="@{spot == null ? View.GONE : View.VISIBLE}">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/big_image_category_spot"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        tools:src="@drawable/ic_category_highlight_else"
        fresco:actualImageScaleType="fitCenter"
        fresco:roundAsCircle="true"
        fresco:placeholderImage="@drawable/ic_category_highlight_else"/>

        <LinearLayout
            android:id="@+id/horizontal_linear_layout"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/parent_textviews"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/title_spot"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:gravity="left|center"
                    android:textStyle="bold"
                    android:text="@{spot.name}"
                    tools:text="Le vertigo"
                    android:textSize="@dimen/text_big"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--<ImageView
                    style="@style/imageIcon"
                    android:id="@+id/spot_category_icon"
                    android:src="@drawable/ic_category_highlight_else"/>-->

                <TextView
                    style="@style/TextDefault"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:text="Bar"
                    android:text="@{spot.getCategory().name}"/>

            </LinearLayout>
        </LinearLayout>
</LinearLayout>
</layout>