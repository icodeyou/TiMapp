<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_spot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/top_gradient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_gradient_view"
        android:background="@drawable/top_layout_spot" />

    <RelativeLayout
        android:id="@+id/parent_layout_spot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1"
            android:layout_alignBottom="@+id/horizontal_linear_layout"
            android:background="@color/colorSecondary" />
        <LinearLayout
            android:id="@+id/horizontal_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_category_spot"
                android:layout_width="@dimen/icon_spot"
                android:layout_height="@dimen/icon_spot"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_category_highlight_nightclub"
                android:background="@drawable/b_spot"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <com.timappweb.timapp.views.AutoResizeTextView
                    android:id="@+id/title_spot"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_title_spot_card"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:maxLines="2"
                    android:gravity="center_vertical|start"
                    android:textStyle="bold"
                    android:text="NightyForever"
                    android:textSize="@dimen/title_event_card"
                    android:textColor="@color/text_secondary" />

                <LinearLayout
                    android:id="@+id/horizontal_tags_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="visible">

                    <com.timappweb.timapp.views.HorizontalTagsRecyclerView
                        xmlns:myattrs="http://schemas.android.com/apk/res/com.timappweb.timapp"
                        android:id="@+id/rv_horizontal_tags"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_rv_displayed_tags"
                        myattrs:horizontal_tags_text_color="@color/default_spot_color"
                        myattrs:horizontal_tags_background_color="@color/transparent"
                        myattrs:horizontal_tags_is_bold="true"
                        myattrs:horizontal_tags_text_size="@dimen/text_tags" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/bottom_gradient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bottom_gradient_view"
        android:background="@drawable/bottom_layout_spot"/>


</LinearLayout>