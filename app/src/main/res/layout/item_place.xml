<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout_place"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/background_place"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/image_bar"
        android:alpha="0.4"
        android:layout_alignTop="@+id/main_box"
        android:layout_alignBottom="@id/main_box"
        android:layout_alignLeft="@id/main_box"
        android:layout_alignRight="@id/main_box"/>

    <LinearLayout
        android:id="@+id/main_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!--        android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_category_place"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_category_highlight_bar"
                android:background="@drawable/b2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <com.timappweb.timapp.views.AutoResizeTextView
                        android:id="@+id/title_place"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="none"
                        android:maxLines="2"
                        android:gravity="center_vertical|left"
                        android:textStyle="bold"
                        android:text="Club Never Stop The Music"
                        android:textSize="@dimen/text_big"
                        android:textColor="@color/White" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingRight="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="@dimen/logo_small"
                            android:layout_height="@dimen/logo_small"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_hot"/>
                        <com.timappweb.timapp.views.SimpleTimerView
                            android:id="@+id/places_points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:padding="2dp"
                            android:singleLine="true"
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"/>
                        <!--<TextView
                            android:id="@+id/people_counter_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:singleLine="true"
                            android:textSize="@dimen/text_small"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:visibility="gone"/>-->
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_height="@dimen/logo_small"
                            android:layout_width="@dimen/logo_small"
                            android:src="@drawable/ic_clock_gray"/>
                        <TextView
                            android:id="@+id/time_place"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="5 min"
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/VeryLightGray"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/horizontal_tags_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.timappweb.timapp.views.HorizontalTagsRecyclerView
                xmlns:myattrs="http://schemas.android.com/apk/res/com.timappweb.timapp"
                android:id="@+id/rv_horizontal_tags"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_rv_displayed_tags"
                myattrs:horizontal_tags_text_color="@color/colorAccent"
                myattrs:horizontal_tags_background_color="@color/transparent"
                myattrs:horizontal_tags_is_bold="true"
                myattrs:horizontal_tags_text_size="@dimen/text_tags"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottom_gradient"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@drawable/top_place_rv"
        android:layout_below="@+id/main_box"/>


</RelativeLayout>