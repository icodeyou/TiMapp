<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_category_place"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_category_music"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_height="@dimen/logo_normal"
                        android:layout_width="@dimen/logo_normal"
                        android:src="@drawable/ic_location"/>
                    <com.timappweb.timapp.views.AutoResizeTextView
                        android:id="@+id/title_place"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="none"
                        android:maxLines="2"
                        android:gravity="center_vertical|left"
                        android:textStyle="bold"
                        android:text="Club Never Stop The Music"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/Black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="@dimen/logo_small"
                            android:layout_height="@dimen/logo_small"
                            android:src="@drawable/ic_hot"/>
                        <TextView
                            android:id="@+id/people_counter_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:singleLine="true"
                            android:text="878"
                            android:textSize="@dimen/text_small"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_height="@dimen/logo_small"
                            android:layout_width="@dimen/logo_small"
                            android:src="@drawable/ic_clock_gray"/>
                        <TextView
                            android:id="@+id/time_place"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="5 min"
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/DarkGray"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/horizontal_tags_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.timappweb.timapp.views.HorizontalTagsRecyclerView
                xmlns:myattrs="http://schemas.android.com/apk/res/com.timappweb.timapp"
                android:id="@+id/rv_horizontal_tags"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_rv_displayed_tags"
                myattrs:horizontal_tags_text_color="@color/colorAccent"
                myattrs:horizontal_tags_background_color="@color/background"
                myattrs:horizontal_tags_is_bold="true"
                myattrs:horizontal_tags_text_size="@dimen/text_tags"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>