<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/event_buttons_around"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/post_buttons"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">
            <ImageView
                style="@style/EventShortcutButtons"
                android:id="@+id/post_pic"
                android:src="@drawable/post_pic_white"
                android:background="@drawable/background_button_littlesquare"/>
            <ImageView
                style="@style/EventShortcutButtons"
                android:id="@+id/post_tags"
                android:src="@drawable/post_tags_white"
                android:background="@drawable/background_button_littlesquare"/>
            <ImageView
                style="@style/EventShortcutButtons"
                android:id="@+id/post_people"
                android:src="@drawable/post_people_white"
                android:background="@drawable/background_button_littlesquare"/>
        </LinearLayout>

        <com.timappweb.timapp.views.SelectableFloatingButton
            style="@style/EventShortcutButtons"
            android:id="@+id/match_button"
            android:src="@drawable/match_red"
            app:backgroundTint="@color/white"
            app:rippleColor="@color/colorAccent"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/event_buttons_away"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            style="@style/EventShortcutButtons"
            android:id="@+id/request_gps_path"
            android:src="@drawable/ic_chineseman"
            android:background="@drawable/background_button_littlesquare"/>

        <com.timappweb.timapp.views.SelectableFloatingButton
            style="@style/EventShortcutButtons"
            android:id="@+id/coming_button"
            app:backgroundTint="@color/white"
            app:rippleColor="@color/colorAccent"
            android:src="@drawable/ic_coming_guy"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/waiting_for_gps_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:indeterminate="true" />
        <TextView
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textSize="@dimen/text_normal"
            android:text="Waiting for location"/>
    </LinearLayout>


</FrameLayout>