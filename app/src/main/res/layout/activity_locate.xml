<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocateActivity"
    android:background="@color/background_light">

    <include layout="@layout/toolbar"></include>


    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="@dimen/text_normal"
        android:text="Please check events that already exist near you."
        android:textColor="@color/colorAccent"
        android:layout_below="@id/toolbar_layout"/>

    <include layout="@layout/no_connection_view"
        android:id="@+id/no_connection_view"
        android:background="@color/background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:gravity="center_vertical"
        android:visibility="visible"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/progress_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|top"
            android:orientation="vertical"
            android:visibility="visible">
            <include layout="@layout/progressview"
                android:layout_height="@dimen/default_progressview"
                android:layout_width="@dimen/default_progressview"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_places"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:divider="@color/divider_listview"
            android:dividerHeight="1dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/button_add_event"
            style="@style/pageSubmitButton"
            android:text="@string/button_add_place"/>

    </LinearLayout>

    <include layout="@layout/toolbar"></include>

    <!--<include
        layout="@layout/toolbar_transparent" />-->

</RelativeLayout>