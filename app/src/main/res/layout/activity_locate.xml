            android:text="@string/checking_around"/>-->
        <include layout="@layout/progressview"
            android:layout_height="@dimen/default_progressview"
            android:layout_width="@dimen/default_progressview"/>
    </LinearLayout>

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="50dp"
        android:textSize="@dimen/text_normal"
        android:text="Please check events that already exist near you."/>

    <LinearLayout
        android:id="@+id/no_connection_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="100dp"
        android:orientation="vertical"
        android:background="@color/background"
        android:visibility="gone">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_phone_connection"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal"
            android:gravity="center"
            android:text="@string/cannot_load_events"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_above="@+id/button_add_event"
        android:gravity="center_vertical"
        android:visibility="visible">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_places"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:divider="@color/divider_listview"
            android:dividerHeight="1dp"
            android:visibility="gone"/>
    </LinearLayout>

