<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocateActivity"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_big_header"
            android:gravity="center"
            android:text="@string/title_activity_locate"
            android:textSize="@dimen/text_big"
            android:layout_gravity="center_horizontal"/>

        <!--TODO : DELETE THE 3 INCLUDE -->
        <include layout="@layout/adapter_place" />
        <include layout="@layout/adapter_place" />
        <include layout="@layout/adapter_place" />
        <include layout="@layout/adapter_place" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/button_add_place"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Add place"
        android:textSize="@dimen/text_big"
        android:textColor="@color/white"
        android:onClick="testClick" />

    <include android:id="@+id/toolbar_transparent"
        layout="@layout/toolbar_transparent" />

</RelativeLayout>