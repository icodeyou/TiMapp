<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingTop="10dp" android:paddingBottom="10dp">

    <com.timappweb.timapp.views.AutoResizeTextView
        android:id="@+id/tv_tag"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="#nimportequoienfinnonmaisohhahahaha"
        android:textSize="@dimen/text_lv_base"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tv_tag_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical|end"
        android:text="2"
        android:textStyle="bold"
        android:textSize="@dimen/text_lv_base"
        android:textColor="@color/colorAccent"/>
</LinearLayout>