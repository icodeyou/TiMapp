<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="7dp"
            android:textStyle="bold"
            android:textSize="@dimen/text_big"
            android:textColor="@color/colorPrimaryVeryDark"
            android:text="#"
            android:id="@+id/textView2" />

        <RelativeLayout
            android:id="@+id/cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/textbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="nimportequoi"
                    android:textSize="@dimen/text_big"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/background_card"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/gradient_bottom_view"
                    android:id="@+id/view" />
            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/textbox"
                android:layout_alignBottom="@+id/textbox"
                android:layout_toRightOf="@+id/textbox"
                android:layout_toEndOf="@+id/textbox"
                android:background="@drawable/gradient_bottom_view"/>

            <TextView
                android:id="@+id/tv_tag_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textbox"
                android:layout_toEndOf="@id/textbox"
                android:layout_marginLeft="-12dp"
                android:layout_marginStart="-12dp"
                android:elevation="5dp"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="10"
                android:textSize="@dimen/text_small"
                android:textColor="@color/white"
                android:background="@drawable/notification_bubble"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>