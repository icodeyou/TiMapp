<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:src="@drawable/logotimapp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/event_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/header_event_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_post_button_drawer"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <FrameLayout
                style="@style/ContainerFabDrawer">
                <android.support.design.widget.FloatingActionButton
                    style="@style/DrawerFab"
                    android:src="@drawable/ic_camera_white"/>
            </FrameLayout>
            <FrameLayout
                style="@style/ContainerFabDrawer">
                <android.support.design.widget.FloatingActionButton
                    style="@style/DrawerFab"
                    android:src="@drawable/ic_hashtag_white"/>
            </FrameLayout>
            <FrameLayout
                style="@style/ContainerFabDrawer">
                <android.support.design.widget.FloatingActionButton
                    style="@style/DrawerFab"
                    android:src="@drawable/ic_people"/>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>