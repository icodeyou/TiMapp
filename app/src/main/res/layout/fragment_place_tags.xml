<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Progress view -->
        <!-- **********************************************************************-->
        <LinearLayout
            android:id="@+id/progress_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="bottom"
            android:orientation="vertical">
            <include layout="@layout/progressbar"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_weight="0.45"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/progress_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:gravity="center"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/black"
                android:text="@string/loading_tags"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.45"/>
        </LinearLayout>

        <!-- No tags yet -->
        <!-- **********************************************************************-->
        <TextView
            android:id="@+id/no_tags_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_normal"
            android:text="@string/no_tags"
            android:gravity="center"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/no_connection_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_phone_connection"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:gravity="center"
                android:text="@string/cannot_load_tags"/>
        </LinearLayout>


        <!-- List View -->
        <!-- **********************************************************************-->
        <ListView
            android:id="@+id/list_tags"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:listSelector="@android:color/transparent"/>

        <!-- Add tags Button-->
        <!-- **********************************************************************-->
        <LinearLayout
            android:id="@+id/main_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_bottom_button"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/colorAccent"
            android:visibility="gone">
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/colorAccentDark"
                android:textAllCaps="false"
                android:text="@string/button_add_tags"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_big"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Add pic Button on the left-->
    <!-- **********************************************************************-->
    <LinearLayout
        android:id="@+id/button_add_pic"
        android:layout_width="60dp"
        android:layout_height="@dimen/height_bottom_button"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="left|bottom"
        android:background="@drawable/border_radius_top_right"
        android:visibility="gone">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ic_camera_plus"/>
    </LinearLayout>

    <!-- Add pic Button on the right-->
    <!-- **********************************************************************-->
    <LinearLayout
        android:id="@+id/button_add_people"
        android:layout_width="60dp"
        android:layout_height="@dimen/height_bottom_button"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="right|bottom"
        android:background="@drawable/border_radius_top_left"
        android:visibility="gone">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ic_people_plus"/>
    </LinearLayout>

</RelativeLayout>