<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="@dimen/card_elevation"
        android:background="@color/white"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/padding_card">

                <com.facebook.drawee.view.SimpleDraweeView
                    xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/person_photo"
                    android:layout_width="@dimen/width_pic_card"
                    android:layout_height="@dimen/width_pic_card"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    fresco:actualImageScaleType="fitCenter"
                    fresco:roundWithOverlayColor="@color/colorPrimary"
                    fresco:placeholderImage="@drawable/placeholder_default"
                    fresco:roundAsCircle="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <me.grantland.widget.AutofitTextView
                        style="@style/TextDefault"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_name_card"
                        android:id="@+id/person_name"
                        android:text="Jean Marc"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        />

                    <com.timappweb.timapp.views.HorizontalTagsRecyclerView
                        xmlns:myattrs="http://schemas.android.com/apk/res/com.timappweb.timapp"
                        android:id="@+id/rv_horizontal_tags"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_small_rv_displayed_tags"
                        android:layout_gravity="center"
                        myattrs:horizontal_tags_text_color="@color/colorPrimary"
                        myattrs:horizontal_tags_background_color="@color/background_card"
                        myattrs:horizontal_tags_is_bold="false"
                        myattrs:horizontal_tags_text_size="@dimen/text_tags_small" />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/selectedView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/LightGrey"
                    android:alpha="0.4"/>
                <ImageView
                    android:layout_width="@dimen/width_checkbox_card"
                    android:layout_height="@dimen/width_checkbox_card"
                    android:alpha="0.7"
                    android:layout_marginStart="@dimen/padding_card_minus_two"
                    android:layout_marginLeft="@dimen/padding_card_minus_two"
                    android:src="@drawable/checkboxselected"/>
            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>