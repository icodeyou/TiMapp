<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/background">

    <!-- TOOLBAR -->
    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/linearLayout">

        <!-- la barre de recherche est dans l'action bar -->

        <!-- ******************************************************************* -->
        <!-- First part: RecyclerView : Saved tags -->
        <com.timappweb.timapp.views.SelectedTagRecyclerView
            android:id="@+id/rv_selected_tags_add_spot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_rv_displayed_tags" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/separator_tags" />


            <!-- ******************************************************************* -->
            <!-- Second part: RecyclerView : Suggestion of tags -->

            <com.timappweb.timapp.views.SuggestedTagRecyclerView
                android:id="@+id/rv_suggested_tags_add_spot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <!-- ******************************************************************* -->
            <!-- Third part: Place -->
            <!-- There should be a "pager" here to insert different fragments according to the state of the place search"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ProgressBar
                    android:id="@+id/progress_bar_location"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/waiting_for_location"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:id="@+id/tv_user_location"
                    />
            </LinearLayout>

            <!-- ******************************************************************* -->
            <!-- Fourth part: Comment + Anonymous button-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/comment_textview"
                    android:layout_toLeftOf="@+id/anonymous_button"
                    android:layout_toStartOf="@+id/anonymous_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:hint="@string/add_comment_title"
                    android:clickable="true"
                    android:onClick="onAddCommentClick"
                    android:background="@drawable/border_comment"/>
                <LinearLayout
                    android:id="@+id/anonymous_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_incognito"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/checkBox" />
                </LinearLayout>

            </RelativeLayout>

            <!-- ******************************************************************* -->
            <!-- Fifth place : Post buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="bottom">
                <Button
                    android:id="@+id/button_submit_spot"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="POST"
                    android:textColor="@color/RoyalBlue"
                    android:textSize="22dp"
                    android:background="@drawable/validate_button"
                    android:onClick="SubmitClickListener"/>
            </LinearLayout>

    </LinearLayout>

</LinearLayout>
