<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/background">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar" />

    <include layout="@layout/layout_pin_spot" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/text_whereareyou"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <com.timappweb.timapp.views.SpotView
                        xmlns:myattrs="http://schemas.android.com/apk/res/com.timappweb.timapp"
                        android:id="@+id/spot_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        myattrs:tags_visible="true"
                        myattrs:bottom_shadow="true"
                        myattrs:top_shadow="true"/>
                </FrameLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="5dp">
                <EditText
                    android:id="@+id/edittext"
                    android:gravity="center"
                    android:hint="Or type a new place here"
                    android:textColorHint="@color/color_hint"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/button_show_categories_spot"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/add_type_place"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>