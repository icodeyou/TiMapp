<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/custom_place_layout"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/toolbar" />

        <TextView
            android:id="@+id/text_whereareyou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:typeface="serif"
            android:text="@string/where_are_you"
            android:textSize="@dimen/text_big"
            android:gravity="center"/>

        <!--<LinearLayout
            android:remote_id="@+remote_id/create_place_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+remote_id/text_whereareyou"
            android:layout_margin="@dimen/button_selecting_margin"
            android:background="@drawable/border_little_radius_buttoncolor"
            android:gravity="center"
            android:visibility="visible">
            <TextView
                android:remote_id="@+remote_id/text_confirm_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="none"
                android:maxLines="1"
                android:textColor="@color/text_button"
                android:textSize="@dimen/text_huge"
                android:text="Create Event"/>
        </LinearLayout>-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/spots_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/spot_categories_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/custom_place_layout"
        android:background="@color/colorPrimary"
        android:alpha="0.9"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/custom_place_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:alpha="0.5"/>

        <LinearLayout
            android:id="@+id/horizontal_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="5dp">
            <EditText
                android:id="@+id/edittext"
                android:gravity="center"
                android:hint="@string/hint_new_spot"
                android:textColorHint="@color/color_hint"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/button_show_categories_spot"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/add_type_place"/>
            <ImageView
                android:id="@+id/create_spot_button"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ok_button"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>