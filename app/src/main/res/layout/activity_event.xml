<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlaceActivity"
    android:background="@color/background_event">

    <ImageView
        android:id="@+id/background_place"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar"
        android:scaleType="centerCrop"
        android:alpha="0.2"/>


    <!-- TOOLBAR -->
    <RelativeLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.timappweb.timapp.views.SpotView
            xmlns:myattrs="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spot_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            myattrs:bottom_shadow="false"
            myattrs:toolbar_mode="true"
            myattrs:background_color="@color/background_activity_event" />
        <include android:id="@+id/toolbar_transparent"
            layout="@layout/toolbar_transparent" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_layout_place"
        android:layout_below="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Progress view -->
        <!-- **********************************************************************-->
        <LinearLayout
            android:id="@+id/progress_view"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:gravity="center">
            <include layout="@layout/progressview"
                android:layout_height="50dp"
                android:layout_width="50dp"/>
        </LinearLayout>

        <!-- Fragments -->
        <!-- ************************************* -->
        <android.support.v4.view.ViewPager
            android:id="@+id/place_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Button I am Coming -->
        <!-- ************************************* -->
        <LinearLayout
            android:id="@+id/button_coming"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_bottom_button"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/background_button_littlesquare"
            android:visibility="gone">
            <TextView
                android:id="@+id/text_coming_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:textColor="@color/text_button"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:text="@string/coming_button"
                android:gravity="center"
                android:textSize="@dimen/text_big"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_coming_guy_white"/>
        </LinearLayout>

        <!-- Button On My Way -->
        <!-- ************************************* -->
        <LinearLayout
            android:id="@+id/button_on_my_way"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_bottom_button"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/default_horizontal_padding"
                android:layout_marginRight="@dimen/default_horizontal_padding"
                android:src="@drawable/ic_left_guy_darkred"/>
            <TextView
                android:id="@+id/text_onmyway_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_selecting_margin"
                android:textColor="@color/colorAccent"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:text="@string/on_my_way"
                android:gravity="center"
                android:textSize="@dimen/text_big"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/default_horizontal_padding"
                android:layout_marginRight="@dimen/default_horizontal_padding"
                android:src="@drawable/ic_coming_guy_darkred"/>
        </LinearLayout>

        <!-- Bottom progress view-->
        <!-- ************************************* -->
        <LinearLayout
            android:id="@+id/progressview_bottom_place"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_bottom_button"
            android:gravity="center"
            android:visibility="gone">
            <include layout="@layout/progressview"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Separator-->
    <!-- ************************************* -->
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/toolbar_layout"
        android:background="@drawable/separator_toolbar_event_activity" />

</RelativeLayout>