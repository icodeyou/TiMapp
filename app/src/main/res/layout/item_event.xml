<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable name="event" type="com.timappweb.timapp.data.models.Event"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_view_container"
        android:orientation="vertical"
        android:background="@drawable/background_card"
        android:elevation="@dimen/card_elevation"
        android:layout_margin="5dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                layout="@layout/header_event_activity"
                android:id="@+id/header_event_activity"
                android:layout_height="100dp"
                android:layout_width="match_parent"
                bind:event="@{event}"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_alignBottom="@+id/header_event_activity"
                android:background="@drawable/gradient_top_view_light">
                <include layout="@layout/layout_top_category_distance"
                    bind:event="@{event}"></include>
            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="@{event.hasSpot ? View.VISIBLE : View.GONE}">

                <include layout="@layout/layout_spot_minimized"
                    bind:spot="@{event.spot}"></include>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <include layout="@layout/event_stats_people"
                    bind:event="@{event}"></include>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>