<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<data>
    <import type="com.timappweb.timapp.utils.DistanceHelper"/>
    <variable name="event" type="com.timappweb.timapp.data.models.Event"/>
</data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/event_view_container"
    android:orientation="vertical"
    android:background="@drawable/background_card"
    android:elevation="@dimen/card_elevation"
    android:layout_margin="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/header_event_activity"
            android:id="@+id/header_event_activity"
            android:layout_height="100dp"
            android:layout_width="match_parent"
            bind:event="@{event}"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_alignBottom="@+id/header_event_activity"
            android:background="@drawable/gradient_top_view_light">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_category_place"
                    style="@style/imageIconSmall"
                    android:layout_margin="2dp"
                    android:background="@drawable/radius_simple_background_primary"
                    app:imageResource="@{event.getCategoryWithDefault().getIconWhiteResId()}" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/colorPrimary"
                    android:text="Strike"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <ImageView
                    style="@style/imageIcon"
                    android:src="@drawable/distance"
                    android:id="@+id/imageView" />
                <TextView
                    android:id="@+id/distance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="bottom"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/colorPrimary"
                    android:text="@{event.hasDistanceFromUser() ? DistanceHelper.prettyPrint(event.getDistanceFromUser()) : @string/waiting_for_location}"
                    tools:text="121 m"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <include layout="@layout/event_stats_people"
            bind:event="@{event}"></include>
    </FrameLayout>

    <include layout="@layout/layout_spot"
        bind:spot="@{event.spot}"></include>

</LinearLayout>
</layout>