<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/event_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/no_connection_view"
            android:id="@+id/no_connection_view"/>

        <!-- List View -->
        <!-- **********************************************************************-->

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout_place_tags"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/list_tags"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- No tags yet -->
            <!-- **********************************************************************-->
            <TextView
                android:id="@+id/no_tags_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/text_normal"
                android:text="@string/no_tags"
                android:textColor="@color/text_place"
                android:gravity="center"
                android:visibility="gone"/>

        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</RelativeLayout>