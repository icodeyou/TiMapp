<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/no_connection_view"
        android:id="@+id/no_connection_view"/>


    <!-- **********************************************************************-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.timappweb.timapp.views.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout_place_people"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.timappweb.timapp.views.RefreshableRecyclerView
                android:id="@+id/list_people"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="true"
                android:saveEnabled="false"/>
            <!--android:listSelector="@android:color/transparent"-->
        </com.timappweb.timapp.views.SwipeRefreshLayout>

        <TextView
            style="@style/NoDataView"
            android:id="@+id/no_posts_view"
            android:text="@string/no_people"/>

    </FrameLayout>


    <RelativeLayout
        android:id="@+id/fab_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/post_button"
            style="@style/PostPlusButton"/>
    </RelativeLayout>

</FrameLayout>