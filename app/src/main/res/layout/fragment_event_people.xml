<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.timappweb.timapp.views.SwipeRefreshLayout
            android:layout_marginTop="@dimen/margin_fragments_event_additional_top"
            android:id="@+id/swipe_refresh_layout_place_people"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:saveEnabled="false"/>
            <!--android:listSelector="@android:color/transparent"-->

        </com.timappweb.timapp.views.SwipeRefreshLayout>
        <include layout="@layout/sticky_header_layout"/>
    </FrameLayout>
</layout>