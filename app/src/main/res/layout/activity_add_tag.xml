<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.AddTagActivity"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_layout" />

        <!-- Separator Top -->
        <!-- **********************************************************************-->
        <View
            android:id="@+id/top_line_hrv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"/>

        <!-- SELECTED TAGS -->
        <!-- **********************************************************************-->
        <com.timappweb.timapp.views.HorizontalTagsRecyclerView
            xmlns:myattrs="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rv_selected_tags"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_rv_displayed_tags"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            myattrs:horizontal_tags_text_color="@color/colorAccent"
            myattrs:horizontal_tags_background_color="@color/background"
            myattrs:horizontal_tags_is_bold="true"
            myattrs:horizontal_tags_text_size="@dimen/text_tags"/>

        <!-- Separator -->
        <!-- **********************************************************************-->
        <View
            android:id="@+id/bottom_line_hrv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorAccentLight"/>

        <!-- Progress View -->
        <!-- **********************************************************************-->
        <include layout="@layout/progressview_fullscreen" />

        <!-- SUGGESTED TAGS -->
        <!-- **********************************************************************-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/scroll_view_suggested_tags">
            <com.greenfrvr.hashtagview.HashtagView
                android:id="@+id/rv_search_suggested_tags"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_tags"
                app:tagTextSize="@dimen/text_normal"
                app:tagTextGravity="center"
                app:tagBackground="@drawable/tag_background"
                app:dynamicMode="true"
                app:tagEllipsize="marquee"
                app:tagPaddingBottom="@dimen/tag_padding"
                app:tagPaddingLeft="@dimen/tag_padding"
                app:tagPaddingRight="@dimen/tag_padding"
                app:tagPaddingTop="@dimen/tag_padding"
                app:rowMargin="@dimen/tag_margin"
                app:tagMargin="@dimen/tag_margin"
                app:tagTextColor="@color/White"
                />
        </ScrollView>

    </LinearLayout>

</RelativeLayout>