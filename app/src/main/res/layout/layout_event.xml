<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable name="event" type="com.timappweb.timapp.data.models.Event"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bind:cardCornerRadius="3dp"
        android:elevation="@dimen/card_elevation"
        android:layout_margin="5dp"
        android:background="@drawable/background_card">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_view_container"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-40dp">
                <include
                    layout="@layout/header_event_activity"
                    android:id="@+id/header_event_activity"
                    android:layout_height="100dp"
                    android:layout_width="match_parent"
                    bind:event="@{event}" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_top_gradient_view"
                    android:background="@drawable/gradient_top_view_light"
                    android:layout_alignBottom="@id/header_event_activity"/>
            </RelativeLayout>

            <include layout="@layout/layout_event_info"
                bind:event="@{event}"/>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="@{event.hasSpot ? View.VISIBLE : View.GONE}">

                    <include layout="@layout/layout_spot_minimized"
                        bind:spot="@{event.spot}"></include>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <include layout="@layout/layout_points"
                        bind:event="@{event}"></include>
                </LinearLayout>
            </LinearLayout>-->

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>