<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/topview_with_spot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_gradient_view"
            android:background="@drawable/top_layout_spot"
            android:visibility="gone"/>

        <View
            android:id="@+id/topview_no_spot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_gradient_view"
            android:background="@drawable/top_layout_event"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_box_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topview">
        <!-- _______________________ BACKGROUND IMAGE __________________________________________-->
        <ImageView
            android:id="@+id/background_image_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/main_box"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/main_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- ___________________________ SPOT _______________________________________________-->
                <com.timappweb.timapp.views.SpotView
                    android:id="@+id/spot_view"
                    xmlns:myattrs="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    myattrs:tags_visible="false"
                    myattrs:bottom_shadow="false"
                    myattrs:gravity_center="true"
                    myattrs:background_color="@color/background_spot_transparent"/>

                <View
                    android:id="@+id/separator"
                    android:layout_alignBottom="@+id/spot_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_top_gradient_view"
                    android:background="@drawable/separator_event" />
            </RelativeLayout>


            <!-- ___________________________ EVENT _______________________________________________-->
            <LinearLayout
                android:id="@+id/main_layout_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/background_event"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_category_place"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="@dimen/icon_spot"
                        android:layout_height="@dimen/icon_spot"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_category_highlight_party"
                        android:visibility="gone"/>


                    <RelativeLayout
                        android:id="@+id/text_relative_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/toolbar"
                        android:layout_toRightOf="@+id/image_category_place"
                        android:layout_toEndOf="@+id/image_category_place">
                        <View
                            android:id="@+id/margin_left_toolbar"
                            android:layout_width="@dimen/margin_custom_toolbar_left"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:visibility="gone"/>
                        <ImageView
                            android:id="@+id/image_small_category_place"
                            android:layout_width="@dimen/little_icon_spot"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/margin_left_toolbar"
                            android:layout_toEndOf="@id/margin_left_toolbar"
                            android:layout_marginRight="@dimen/default_ic_margin"
                            android:layout_marginEnd="@dimen/default_ic_margin"
                            android:src="@drawable/ic_category_highlight_party"
                            android:visibility="visible"/>
                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/title_event"
                            android:layout_toRightOf="@+id/image_small_category_place"
                            android:layout_toEndOf="@+id/image_small_category_place"
                            android:layout_toLeftOf="@+id/margin_right_toolbar"
                            android:layout_toStartOf="@+id/margin_right_toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:text="SoirÃ©e dansante Rock N Roll"
                            android:textSize="@dimen/title_event_card"
                            android:textColor="@color/White" />
                        <View
                            android:id="@+id/margin_right_toolbar"
                            android:layout_width="@dimen/margin_custom_toolbar_right"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/htrv_frame_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_rv_displayed_tags"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:id="@+id/white_points_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center|start"
                    android:visibility="visible">
                    <ImageView
                        android:id="@+id/ic_hot"
                        android:layout_width="@dimen/little_icon_spot"
                        android:layout_height="@dimen/logo_normal"
                        android:layout_marginRight="@dimen/default_ic_margin"
                        android:layout_marginEnd="@dimen/default_ic_margin"
                        android:src="@drawable/ic_hot_white"/>
                    <com.timappweb.timapp.views.SimpleTimerView
                        android:id="@+id/white_points_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:text="3600"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/White"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/distance_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:gravity="center|start"
                    android:visibility="visible">
                    <ImageView
                        android:layout_width="@dimen/little_icon_spot"
                        android:layout_height="@dimen/logo_normal"
                        android:layout_marginRight="@dimen/default_ic_margin"
                        android:layout_marginEnd="@dimen/default_ic_margin"
                        android:src="@drawable/distance"/>
                    <com.timappweb.timapp.views.SimpleTimerView
                        android:id="@+id/distance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:text="120 m"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/White"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Description -->
                <!-- **********************************************************************-->
                <LinearLayout
                    android:id="@+id/description_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/description_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="left"
                        android:textColor="@color/white"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_height="@dimen/logo_small"
                            android:layout_width="@dimen/little_icon_spot"
                            android:src="@drawable/ic_clock_gray"/>
                        <TextView
                            android:id="@+id/time_place"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="5 min ago"
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/VeryLightGray"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
<!--
            <View
                android:id="@+id/bottom_gradient_if_padding"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_bottom_gradient_view"
                android:background="@drawable/bottom_layout_event" />-->
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/bottom_gradient_event"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bottom_gradient_view"
        android:layout_below="@+id/main_box_relative"
        android:background="@drawable/bottom_layout_event" />

    <LinearLayout
        android:id="@+id/post_buttons"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/bottom_gradient_event"
        android:layout_toLeftOf="@+id/match_button"
        android:layout_toStartOf="@+id/match_button"
        android:orientation="horizontal"
        android:visibility="visible">
        <ImageView
            android:id="@+id/post_pic"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/post_pic_white"
            android:background="@drawable/background_button_littlesquare"/>
        <ImageView
            android:id="@+id/post_tags"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/post_tags_white"
            android:background="@drawable/background_button_littlesquare"/>
        <ImageView
            android:id="@+id/post_people"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/post_people_white"
            android:background="@drawable/background_button_littlesquare"/>
    </LinearLayout>

    <com.timappweb.timapp.views.SelectableFloatingButton
        android:id="@+id/match_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignBottom="@+id/post_buttons"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:backgroundTint="@color/white"
        app:rippleColor="@color/colorAccent"
        android:src="@drawable/match_red"/>
    <!--<RelativeLayout
        android:id="@+id/all_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottom_gradient_event"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="-25dp">

    </RelativeLayout>-->

</RelativeLayout>