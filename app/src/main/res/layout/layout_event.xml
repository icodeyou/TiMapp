<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/top_gradient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_gradient_view"
        android:background="@drawable/top_layout_place"/>

    <!-- _______________________ BACKGROUND IMAGE __________________________________________-->
    <ImageView
        android:id="@+id/background_image_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_gradient"
        android:layout_alignBottom="@+id/main_box_relative"
        android:scaleType="centerCrop"
        android:src="@drawable/image_party"/>

    <RelativeLayout
        android:id="@+id/main_box_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <LinearLayout
            android:id="@+id/main_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ___________________________ SPOT _______________________________________________-->
            <com.timappweb.timapp.views.SpotView
                xmlns:myattrs="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                myattrs:tags_visible="false"
                myattrs:bottom_shadow="false"
                myattrs:gravity_center="true"
                myattrs:background_color="@color/background_spot_transparent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_bottom_gradient_view"
                android:background="@drawable/separator_event" />

            <!-- ___________________________ EVENT _______________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/background_place"
                android:padding="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/image_category_place"
                        android:layout_toStartOf="@+id/image_category_place"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/title_event"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:maxLines="2"
                                android:gravity="center_vertical|left"
                                android:textStyle="bold"
                                android:text="Club Okicool"
                                android:textSize="@dimen/title_event_card"
                                android:textColor="@color/White" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:paddingRight="@dimen/default_horizontal_padding"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="@dimen/logo_small"
                                    android:layout_height="@dimen/logo_small"
                                    android:layout_marginRight="5dp"
                                    android:src="@drawable/ic_hot"/>
                                <com.timappweb.timapp.views.SimpleTimerView
                                    android:id="@+id/places_points"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:padding="2dp"
                                    android:singleLine="true"
                                    android:textSize="@dimen/text_small"
                                    android:textColor="@color/colorPrimary"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_height="@dimen/logo_small"
                                    android:layout_width="@dimen/logo_small"
                                    android:src="@drawable/ic_clock_gray"/>
                                <TextView
                                    android:id="@+id/time_place"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="5 min"
                                    android:textSize="@dimen/text_small"
                                    android:textColor="@color/VeryLightGray"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/image_category_place"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_gravity="center"
                        android:alpha="0.8"
                        android:src="@drawable/ic_category_highlight_party"
                        android:background="@drawable/b3"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/horizontal_tags_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <com.timappweb.timapp.views.HorizontalTagsRecyclerView
                        xmlns:myattrs="http://schemas.android.com/apk/res/com.timappweb.timapp"
                        android:id="@+id/rv_horizontal_tags"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_rv_displayed_tags"
                        myattrs:horizontal_tags_text_color="@color/white"
                        myattrs:horizontal_tags_background_color="@color/transparent"
                        myattrs:horizontal_tags_is_bold="true"
                        myattrs:horizontal_tags_text_size="@dimen/text_tags"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/bottom_gradient"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_bottom_gradient_view"
                android:background="@drawable/bottom_layout_place" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>