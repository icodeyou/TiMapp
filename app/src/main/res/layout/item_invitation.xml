<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <me.grantland.widget.AutofitTextView
        android:id="@+id/name_invitor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_radius_invitation"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/text_small"
        android:text="Jack Overfield invited you 20 hours ago" />

    <com.timappweb.timapp.views.EventView
        xmlns:myattrs="http://schemas.android.com/apk/res/com.timappweb.timapp"
        android:id="@+id/event_view"
        android:layout_marginTop="-10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        myattrs:tags_visible="true"
        myattrs:bottom_shadow="true"
        myattrs:top_shadow="true"/>

</LinearLayout>