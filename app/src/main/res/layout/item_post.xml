<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        card_view:cardUseCompatPadding="false"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="2dp"
        android:id="@+id/cv"
        card_view:cardBackgroundColor="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_card"
            android:paddingRight="@dimen/padding_card">

            <com.pkmmte.view.CircularImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_picture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                app:border="false"
                app:shadow="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">
                    <com.timappweb.timapp.views.AutoResizeTextView
                        android:id="@+id/tv_username"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_name_card"
                        android:layout_marginRight="10dp"
                        android:maxLines="1"
                        android:text="Jean Marc"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_normal"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:gravity="center_vertical"
                        android:text="60min ago"
                        android:textColor="@color/Gray"/>
                </LinearLayout>

                <com.timappweb.timapp.views.HorizontalTagsRecyclerView
                    xmlns:myattrs="http://schemas.android.com/apk/res/com.timappweb.timapp"
                    android:id="@+id/rv_horizontal_tags"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_small_rv_displayed_tags"
                    myattrs:horizontal_tags_text_color="@color/colorAccent"
                    myattrs:horizontal_tags_background_color="@color/background"
                    myattrs:horizontal_tags_is_bold="false"
                    myattrs:horizontal_tags_text_size="@dimen/text_small"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>