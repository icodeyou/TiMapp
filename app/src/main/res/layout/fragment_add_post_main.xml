<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/linearLayout">

    <!-- ******************************************************************* -->
    <!-- ALONE + GROUP : Group or Alone -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_rv_displayed_tags"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/LightGrey"
            android:text="Alone"
            android:onClick="onAloneCLick"/>

        <Button
            android:id="@+id/button2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/Navy"
            android:text="Group"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:onClick="onGroupClick"/>
    </LinearLayout>

    <!-- ******************************************************************* -->
    <!-- GROUP : Getting your location IF LOCATION NOT LOADED -->
    <LinearLayout
        android:id="@+id/top_layout_if_not_loaded"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_post_field_group"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/border"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/progress_bar_location"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/waiting_for_location"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:id="@+id/tv_user_location"
            />
    </LinearLayout>

    <!-- ******************************************************************* -->
    <!-- GROUP : Getting your location IF LOCATION LOADED AND NO GROUP -->
    <LinearLayout
        android:id="@+id/top_layout_without_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_post_field_group"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/border">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25dp"
            android:text="Title :"/>
        <EditText
            android:id="@+id/post_tittle"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30dp"
            android:text="test M. Michel"/>
    </LinearLayout>

    <!-- ******************************************************************* -->
    <!-- GROUP : Getting your location IF LOCATION LOADED AND GROUPS EXIST -->
    <LinearLayout
        android:id="@+id/top_layout_with_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_post_field_group"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/border"
        android:visibility="gone">
        <com.timappweb.timapp.views.HorizontalRecyclerView
            android:id="@+id/rv_suggested_locations"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"/>
    </LinearLayout>

    <!-- ******************************************************************* -->
    <!-- ALONE + GROUP : Add tags -->
    <LinearLayout
        android:id="@+id/add_tags_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/LightGreen">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/plus_button"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Add Tags"
            android:textSize="30dp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- ******************************************************************* -->
    <!-- GROUP: Selected tags -->
    <!-- TODO: donner des noms plus généraux pour la RecyclerView (HorizontalRecyclerView et FillRecyclerView) -->
    <!-- TODO: cas ici présent : FillRecyclerView avec un paramètre type="black" (=text black et contour black) ou type="grey" (=text grey et sans contour)-->
    <com.timappweb.timapp.views.FilledRecyclerView
        android:id="@+id/rv_main_selected_tags"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

    <!-- ******************************************************************* -->
    <!-- ALONE + GROUP : Comment + Anonymous button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <LinearLayout
            android:id="@+id/anonymous_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Make it anonymous" />
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:id="@+id/comment_textview"
            android:layout_toLeftOf="@+id/anonymous_button"
            android:layout_toStartOf="@+id/anonymous_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="15dp"
            android:hint="@string/add_comment_title"
            android:clickable="true"
            android:onClick="onAddCommentClick"
            android:background="@drawable/border_comment"/>
        <Button
            android:id="@+id/button_submit_spot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="POST"
            android:textColor="@color/Black"
            android:textSize="22dp"
            android:background="@drawable/validate_button"
            android:onClick="SubmitClickListener"/>
    </LinearLayout>

</LinearLayout>