<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/linearLayout">

    <!-- ******************************************************************* -->
    <!-- Edit Comment Layout -->
    <LinearLayout
        android:id="@+id/comment_edittext_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:text="Type a comment"
            android:textSize="20dp"/>

        <com.timappweb.timapp.views.CommentEditText
            android:id="@+id/comment_edit_text"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/comment_validate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="add comment"
            android:capitalize="characters"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:background="@drawable/post_button"/>
    </LinearLayout>

    <!-- ******************************************************************* -->
    <!-- ALONE + GROUP : Group or Alone -->
    <LinearLayout
        android:id="@+id/alone_and_group_buttons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_rv_displayed_tags"
        android:orientation="horizontal">
        <Button
            android:id="@+id/alone_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/LightGrey"
            android:text="Alone"/>

        <Button
            android:id="@+id/group_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/Navy"
            android:text="Group"
            android:textColor="@color/white"
            android:layout_gravity="right"/>
    </LinearLayout>

    <!-- ******************************************************************* -->
    <!-- GROUP : Getting your location IF LOCATION NOT LOADED -->
    <LinearLayout
        android:id="@+id/top_layout_if_not_loaded"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_post_field_group"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/border"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/progress_bar_location"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/waiting_for_location"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:id="@+id/tv_user_location"
            />
    </LinearLayout>

    <!-- ******************************************************************* -->
    <!-- GROUP : Getting your location IF LOCATION LOADED AND NO GROUP -->

    <EditText
        android:id="@+id/top_layout_without_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_post_field_group"
        android:singleLine="true"
        android:gravity="center"
        android:textSize="30dp"
        android:hint="Title"
        android:background="@drawable/border"/>

    <!-- ******************************************************************* -->
    <!-- GROUP : Getting your location IF LOCATION LOADED AND GROUPS EXIST -->
    <LinearLayout
        android:id="@+id/top_layout_with_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_post_field_group"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/border"
        android:visibility="gone">
        <com.timappweb.timapp.views.HorizontalRecyclerView
            android:id="@+id/rv_suggested_locations"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"/>
    </LinearLayout>

    <!-- ******************************************************************* -->
    <!-- ALONE + GROUP : Add tags -->
    <LinearLayout
        android:id="@+id/add_tags_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/LightSkyBlue">
        <TextView
            android:id="@+id/add_tags_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addpost_if_no_tag"
            android:padding="20dp"
            android:textSize="17dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_plus"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Add Tags"
                android:textSize="30dp"
                android:textColor="@color/Black"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <!-- ******************************************************************* -->
    <!-- GROUP: Selected tags -->
    <!-- TODO: cas ici présent : FillRecyclerView avec un paramètre type="black" (=text black et contour black) ou type="grey" (=text grey et sans contour)-->
    <com.timappweb.timapp.views.FilledRecyclerView
        android:id="@+id/rv_main_selected_tags"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

    <!-- ******************************************************************* -->
    <!-- ALONE + GROUP : Comment + Anonymous button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <TextView
            android:id="@+id/comment_textview"
            android:layout_toLeftOf="@+id/anonymous_layout"
            android:layout_toStartOf="@+id/anonymous_layout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:minHeight="80dp"
            android:maxHeight="300dp"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="15dp"
            android:hint="@string/add_comment_title"
            android:clickable="true"
            android:background="@drawable/border_comment"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/anonymous_layout"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anonymous"/>

            <Button
                android:id="@+id/button_submit_post"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:text="post"
                android:textColor="@color/Black"
                android:textSize="22dp"
                android:background="@drawable/post_button"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>