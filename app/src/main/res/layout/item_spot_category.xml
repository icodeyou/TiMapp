<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="120dp"
    android:layout_height="120dp" android:gravity="center"
    android:layout_marginBottom="20dp">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/ic_category_highlight_bar" />
    <com.timappweb.timapp.views.AutoResizeTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/white"
        android:text="Streetshow"/>
</LinearLayout>