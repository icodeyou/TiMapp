<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:gravity="center"
    android:layout_marginBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/icon_selected"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/ic_category_highlight_bar" />
        <com.timappweb.timapp.views.AutoResizeTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/text_big"
            android:textColor="@color/white"
            android:text="Streetshow"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/icon_selected"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@drawable/checkboxselected"
        android:alpha="0.5"
        android:visibility="gone"/>
</RelativeLayout>