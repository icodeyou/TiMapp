<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="110dp" android:gravity="center"
    android:layout_marginBottom="20dp" android:background="@color/red">
    <!--android:layout_marginBottom="20dp" android:background="@color/red">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/spot_category_sportfield" />
        <com.timappweb.timapp.views.AutoResizeTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="2"
            android:textStyle="bold"
            android:textSize="@dimen/text_small"
            android:textColor="@color/white"
            android:text="Sport field"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/icon_selected"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:src="@drawable/checkboxselected"
        android:alpha="1"
        android:visibility="visible"/>
</RelativeLayout>