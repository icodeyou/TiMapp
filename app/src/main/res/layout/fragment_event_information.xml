<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <import type="com.timappweb.timapp.utils.DistanceHelper"/>
        <variable name="event" type="com.timappweb.timapp.data.models.Event"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
            android:id="@+id/scrollView"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/material_view_pager_placeholder"/>

                <LinearLayout
                    android:id="@+id/main_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_fragments_event"
                    android:background="@color/background"
                    android:layout_marginTop="3dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <include
                            layout="@layout/event_stats_people"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            bind:event="@{event}" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/VeryLightGray" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp">
                        <!--
                                    <TextView
                                        style="@style/TextMute"
                                        android:text="@string/event_organizer"
                                        android:padding="@dimen/padding_small"
                                        android:visibility="@{event.hasSpot() ? View.VISIBLE : View.GONE}"/>-->
                        <!--
                                    <TextView
                                        style="@style/TextMute"
                                        android:text="@string/event_popularity"
                                        android:padding="@dimen/padding_small"/>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_event_activity"
                            android:orientation="vertical">

                            <include layout="@layout/layout_spot"
                                bind:spot="@{event.spot}"></include>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/image_category_place"
                                            style="@style/imageIconSmall"
                                            android:layout_margin="2dp"
                                            android:background="@drawable/radius_simple_background_black"
                                            tools:src="@drawable/ic_category_else"
                                            app:imageResource="@{event.getCategoryWithDefault().getIconWhiteResId()}"
                                            />

                                        <TextView
                                            android:id="@+id/event_category_name"
                                            style="@style/item_text_info"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{event.getCategoryWithDefault().name}"
                                            tools:text="Category name"/>
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="7dp">

                                        <ImageView
                                            style="@style/imageIcon"
                                            android:src="@drawable/ic_clock"
                                            android:id="@+id/imageView2" />

                                        <TextView
                                            android:id="@+id/time_place"
                                            style="@style/item_text_info"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{event.getTime()}"
                                            tools:text="5 min ago"
                                            />
                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:id="@+id/distance_layout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:orientation="horizontal"
                                        android:gravity="left"
                                        android:visibility="visible">

                                        <ImageView
                                            style="@style/imageIcon"
                                            android:src="@drawable/distance_black"
                                            android:visibility="@{event.hasDistanceFromUser() ? View.VISIBLE : View.GONE}"
                                            android:id="@+id/imageView" />

                                        <ProgressBar
                                            style="@style/SmallFormIconGroup"
                                            android:visibility="@{event.hasDistanceFromUser() ? View.GONE : View.VISIBLE}"
                                            android:id="@+id/progressBar2" />

                                        <TextView
                                            android:id="@+id/distance_text"
                                            style="@style/item_text_info"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{event.hasDistanceFromUser() ? DistanceHelper.prettyPrint(event.getDistanceFromUser()) : @string/waiting_for_location}"
                                            tools:text="121 m"/>
                                    </RelativeLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/status_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="@string/i_am_here"
                                        android:textColor="@color/DarkGray"
                                        android:textSize="@dimen/text_normal"
                                        android:textStyle="italic" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:src="@drawable/gps"
                                            android:padding="10dp"/>
                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:src="@drawable/ic_coming_guy_black"
                                            android:padding="10dp"
                                            android:visibility="gone"/>
                                        <android.support.v7.widget.SwitchCompat
                                            android:id="@+id/switch_button"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:theme="@style/DefaultSwitch" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/description_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:gravity="left"
                        android:textColor="@color/DarkGray"
                        android:textSize="@dimen/text_small"
                        android:text="@{event.description}"
                        tools:text="This is the description of the event. The event is beautiful. The event is magical. The event is free. Come. Come here if you want to spend a wonderful time."/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/map_height">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="20dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp">

                            <com.google.android.gms.maps.MapView
                                android:id="@+id/map"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </android.support.v7.widget.CardView>
                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/button_nav"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/fab_map_margin"
                            android:src="@drawable/nav_white"/>
                        <!--android:layout_below="@+id/button_display_map"-->

                        <!--<android.support.design.widget.FloatingActionButton
                            android:id="@+id/button_display_map"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/fab_map_margin"
                            android:src="@drawable/ic_map_light"/>-->

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>


        <!--
        TEST BOTTOM BUTTONS
        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_top_gradient_view"
                android:background="@drawable/top_layout_event" />
            <LinearLayout
                android:id="@+id/here_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@color/white">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_hot"
                    android:id="@+id/imageView3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_normal"
                    android:text="Fire Up"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/coming_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@color/white">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_hot"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
