<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="com.timappweb.timapp.utils.DistanceHelper"/>
        <variable name="event" type="com.timappweb.timapp.data.models.Event"/>
    </data>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.crystal.crystalpreloaders.widgets.CrystalPreloader
            android:id="@+id/progress_view"
            android:layout_centerHorizontal="true"
            style="@style/SmallProgressView"/>

        <LinearLayout
            android:id="@+id/search_tags_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:background="@color/colorAccent"
            android:orientation="vertical">
            <com.timappweb.timapp.views.HorizontalTagsRecyclerView
                xmlns:myattrs="http://schemas.android.com/apk/res-auto"
                android:id="@+id/search_tags"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_rv_displayed_tags"
                android:layout_gravity="center"
                myattrs:horizontal_tags_text_color="@color/white"
                myattrs:horizontal_tags_text_size="@dimen/text_tags" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/event_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="38dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_top_gradient_view"
                    android:background="@drawable/gradient_top_view_dark"/>
                <LinearLayout
                    android:id="@+id/card_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_bottom_map"
                    android:paddingBottom="@dimen/padding_bottom_map"
                    android:paddingTop="@dimen/padding_bottom_map"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/title_event"
                        android:layout_width="match_parent"
                        style="@style/TextBold"
                        android:layout_marginRight="80dp"
                        android:layout_marginEnd="80dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/textBlack"
                        android:text="@{event.name}"
                        tools:text="Fete de la musique de la mort qui tue"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/layout_spot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">
                            <include layout="@layout/layout_spot_minimized"
                                bind:spot="@{event.spot}"></include>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/distance_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout_spot"
                            android:orientation="horizontal">
                            <ProgressBar
                                style="@style/SmallFormIconGroup"
                                android:indeterminateTint="@color/gray"
                                android:visibility="@{event.hasDistanceFromUser() ? View.GONE : View.VISIBLE}" />

                            <TextView
                                style="@style/TextDefault"
                                android:textColor="@color/textMute"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@{event.hasDistanceFromUser() ? DistanceHelper.prettyPrint(event.getDistanceFromUser()) : @string/waiting_for_location}"
                                tools:text="120 km"
                                android:id="@+id/textView" />
                        </LinearLayout>
                        
                       <FrameLayout
                           android:layout_width="84dp"
                           android:layout_height="match_parent"
                           android:layout_alignParentRight="true"
                           android:layout_alignParentEnd="true"
                           android:layout_alignBottom="@+id/distance_layout">
                           <com.timappweb.timapp.views.SimpleTimerView
                               android:id="@+id/points_text"
                               style="@style/TextDefault"
                               android:textStyle="bold"
                               android:layout_gravity="center"
                               android:text="3600" />
                       </FrameLayout>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <com.getbase.floatingactionbutton.FloatingActionsMenu
                android:id="@+id/multiple_actions"
                style="@style/GetbaseFab"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="false">

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_camera"
                    style="@style/MiniFab"
                    app:fab_icon="@drawable/ic_camera" />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_tag"
                    style="@style/MiniFab"
                    app:fab_icon="@drawable/hashtag_red"
                    android:visibility="@{event.isUserAround() ? View.VISIBLE : View.GONE}"/>

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_invite"
                    app:fab_icon="@drawable/ic_people_red"
                    style="@style/MiniFab"/>

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_coming"
                    style="@style/MiniFab"
                    app:fab_icon="@drawable/ic_coming_guy_darkred"
                    android:visibility="@{!event.isUserAround() ? View.VISIBLE : View.GONE}"/>

            </com.getbase.floatingactionbutton.FloatingActionsMenu>

        </RelativeLayout>


    </RelativeLayout>
</layout>
