<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="com.timappweb.timapp.utils.DistanceHelper"/>
        <variable name="event" type="com.timappweb.timapp.data.models.Event"/>
    </data>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/search_tags_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:background="@color/colorAccent"
            android:orientation="vertical">
            <com.timappweb.timapp.views.HorizontalTagsRecyclerView
                xmlns:myattrs="http://schemas.android.com/apk/res-auto"
                android:id="@+id/search_tags"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_rv_displayed_tags"
                android:layout_gravity="center"
                myattrs:horizontal_tags_text_color="@color/white"
                myattrs:horizontal_tags_text_size="@dimen/text_tags" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/map"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_top_gradient_view"
                android:background="@drawable/gradient_top_view_light"
                android:layout_above="@+id/event_view"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">


                <!-- TODO JEAN UTILISE LES THEMES AU LIEU DE FAIRE DES PUTAINS DE COPY AND PAST -->
                <com.getbase.floatingactionbutton.FloatingActionsMenu
                    android:id="@+id/multiple_actions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_addButtonColorNormal="@color/colorSecondaryExtaLight"
                    fab:fab_addButtonColorPressed="@color/background"
                    fab:fab_addButtonPlusIconColor="@color/colorPrimary"
                    style="@style/GetbaseFab"
                    fab:fab_expandDirection="left">

                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:id="@+id/action_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        fab:fab_icon="@drawable/ic_camera_white"
                        fab:fab_size="mini"
                        fab:fab_colorNormal="@color/colorPrimary"
                        fab:fab_colorPressed="@color/colorPrimaryVeryDark"
                        android:visibility="@{event.isUserAround() ? View.VISIBLE : View.GONE}"/>

                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:id="@+id/action_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        fab:fab_icon="@drawable/ic_hashtag_white"
                        fab:fab_size="mini"
                        fab:fab_colorNormal="@color/colorPrimary"
                        fab:fab_colorPressed="@color/colorPrimaryVeryDark"
                        android:visibility="@{event.isUserAround() ? View.VISIBLE : View.GONE}"/>

                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:id="@+id/action_invite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        fab:fab_icon="@drawable/ic_people"
                        fab:fab_size="mini"
                        fab:fab_colorNormal="@color/colorPrimary"
                        fab:fab_colorPressed="@color/colorPrimaryVeryDark"/>

                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:id="@+id/action_coming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        fab:fab_icon="@drawable/ic_coming_guy"
                        fab:fab_size="mini"
                        fab:fab_colorNormal="@color/colorPrimary"
                        fab:fab_colorPressed="@color/colorPrimaryVeryDark"
                        android:visibility="@{!event.isUserAround() ? View.VISIBLE : View.GONE}"/>

                </com.getbase.floatingactionbutton.FloatingActionsMenu>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_event_bottom_view">
                    <TextView
                        style="@style/TextLightBackgroundBold"
                        android:id="@+id/title_event"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@{event.name}"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignBottom="@+id/distance_layout"
                        android:layout_toLeftOf="@+id/distance_layout"
                        android:layout_toStartOf="@+id/distance_layout"
                        tools:text="Fete de la musique"/>

                    <LinearLayout
                        android:id="@+id/distance_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal">
                        <ProgressBar
                            style="@style/SmallFormIconGroup"
                            android:visibility="@{event.hasDistanceFromUser() ? View.GONE : View.VISIBLE}"
                            android:id="@+id/progressBar2" />

                        <TextView
                            style="@style/TextLightBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@{event.hasDistanceFromUser() ? DistanceHelper.prettyPrint(event.getDistanceFromUser()) : @string/waiting_for_location}"
                            tools:text="120 km"
                            android:id="@+id/textView" />
                    </LinearLayout>
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{event.hasSpot ? View.VISIBLE : View.GONE}">

                    <include layout="@layout/layout_spot_minimized"
                        bind:spot="@{event.spot}"></include>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_stats_event_map"
                android:gravity="left|center_vertical"
                android:background="@color/white">
                <include layout="@layout/event_stats_people"
                    bind:event="@{event}"></include>
            </LinearLayout>



        </LinearLayout>


    </RelativeLayout>
</layout>
