<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable name="event" type="com.timappweb.timapp.data.models.Event"/>
    </data>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/progress_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_loading_map"
            android:gravity="center"
            android:visibility="gone">
            <include layout="@layout/progressview"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>

        <!--<ImageView
            android:remote_id="@+remote_id/my_location_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="@dimen/fab_margin"
            android:src="@drawable/my_loc_button"/>-->

        <LinearLayout
            android:id="@+id/search_tags_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:background="@color/colorAccent"
            android:orientation="vertical">
            <com.timappweb.timapp.views.HorizontalTagsRecyclerView
                xmlns:myattrs="http://schemas.android.com/apk/res-auto"
                android:id="@+id/search_tags"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_rv_displayed_tags"
                android:layout_gravity="center"
                myattrs:horizontal_tags_text_color="@color/white"
                myattrs:horizontal_tags_text_size="@dimen/text_tags" />
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/post_event_button"
            style="@style/PostPlusButton"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/event_view"
            android:layout_alignWithParentIfMissing="true"
            app:backgroundTint="@color/colorPrimaryDark" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/map"
            android:id="@+id/event_view"
            android:alpha="0.9"
            android:orientation="vertical">
            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/title_event"
                tools:text="Fete de la musique"
                android:text="@{event.name}"
                style="@style/title2"
                android:textColor="@color/textLight"
                android:background="@color/colorPrimaryDark"/>

            <include layout="@layout/event_user_interaction" bind:event="@{event}"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{event.hasSpot ? View.VISIBLE : View.GONE}">
                <include layout="@layout/layout_spot"
                    bind:spot="@{event.spot}"
                    ></include>
            </FrameLayout>
            <include layout="@layout/event_stats_people"
                bind:event="@{event}"
                ></include>
        </LinearLayout>


    </RelativeLayout>
</layout>
