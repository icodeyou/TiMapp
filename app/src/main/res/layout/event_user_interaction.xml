<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <import type="com.timappweb.timapp.utils.DistanceHelper"/>
        <variable name="event" type="com.timappweb.timapp.data.models.Event"/>
    </data>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">
            <ImageView
                android:id="@+id/image_category_place"
                style="@style/imageIcon"
                tools:src="@drawable/ic_category_else"
                app:imageResource="@{event.getCategoryWithDefault().getIconWhiteResId()}"
                />

            <TextView
                android:id="@+id/event_category_name"
                style="@style/TextDefault"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@{event.getCategoryWithDefault().name}"
                tools:text="Category name"
                android:textColor="@color/textLight"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/distance_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="left"
            android:visibility="visible">

            <ImageView
                style="@style/imageIcon"
                android:src="@drawable/distance"
                android:id="@+id/imageView" />

            <ProgressBar
                style="@style/formIconGroup"
                android:visibility="@{event.hasDistanceFromUser() ? View.GONE : View.VISIBLE}"/>
            <com.timappweb.timapp.views.SimpleTimerView
                android:id="@+id/distance_text"
                style="@style/TextDefault"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textColor="@color/textLight"
                android:textStyle="bold"
                android:text="@{event.hasDistanceFromUser() ? DistanceHelper.prettyPrint(event.getDistanceFromUser()) : @string/waiting_for_location}"
                tools:text="120 m"/>
        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="@{event.isOver() ? View.GONE: View.VISIBLE}">

        <android.support.design.widget.FloatingActionButton
            style="@style/EventShortcutButtons"
            android:id="@+id/here_button"
            android:src="@drawable/background_button_event_here"
            android:drawable="@color/background_floating_btn_state"/>

        <android.support.design.widget.FloatingActionButton
            style="@style/EventShortcutButtons"
            android:id="@+id/coming_button"
            android:src="@drawable/background_button_event_coming"
            android:drawable="@color/background_floating_btn_state"
            android:visibility="gone"/>

        </FrameLayout>
    </LinearLayout>
</layout>