<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">


        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <!--<item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>-->

        <!-- TOOLBAR -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


        <!-- -->
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textColorPrimary">@color/textLight</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>

        <!-- Material Theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--<item name="android:windowTranslucentStatus" tools:targetApi="21">true</item>-->


        <!-- Toolbar Theme / Apply white arrow -->
        <item name="colorControlNormal">@color/textLight</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>


        <item name="android:navigationBarColor" tools:targetApi="21">@color/navigationBarColor</item>
        <!--<item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>-->

    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- White arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/drawerArrowColor</item>
    </style>

    <style name="EditProfileTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/White</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="AppTheme.ActionBarTheme">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="AppTheme.TransparentPopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowActionBarOverlay">true</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <!--- ************************************************************************************** -->

    <style name="iconMapTagText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="PagerTabStripText">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="NoDataView">
        <item name="android:text">There is nothing yet</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="EventShortcutButtons">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="backgroundTint">@color/background_floating_btn_state</item>
        <item name="rippleColor">@color/ripple_floating_btn_state</item>
    </style>


    <style name="PostPlusButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:src">@drawable/plus_button_white</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="TextInfo">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="TextDefault">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:gravity">left|center</item>
    </style>
    <style name="TextDefaultSecondary">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="TextMute">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textMute</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="pageSubmitButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/background_button_littlesquare</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:radius">0dp</item>
    </style>

    <style name="formLabel">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:textColor">@color/textMute</item>
       <item name="android:textSize">@dimen/text_small</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="formEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/color_hint</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edittext_bottom_line</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="formGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="formIconGroup">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="title2">
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>
    <style name="title1">
        <item name="android:textSize">@dimen/text_huge</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <style name="imageIcon">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="imageIconBig">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="imageIconSmall">
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="formMultilineText" parent="formEditText">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:lines">6</item>
    </style>


    <color name="textMute">#777777</color>
</resources>