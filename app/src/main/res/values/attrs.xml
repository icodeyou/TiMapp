<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Define here attributes that are going to be called more than once-->
    <attr name="tags_visible" format="boolean" />
    <attr name="bottom_shadow" format="boolean" />
    <attr name="top_shadow" format="boolean" />

    <declare-styleable name="HorizontalTagsRecyclerView">
        <attr name="horizontal_tags_background_color" format="color" />
        <attr name="horizontal_tags_text_color" format="color" />
        <attr name="horizontal_tags_is_bold" format="boolean" />
        <attr name="horizontal_tags_text_size" format="dimension" />
    </declare-styleable>

    <!-- parent styleable -->
    <!--<declare-styleable name="CardView">
        <attr name="tags_visible" format="boolean" />
        <attr name="bottom_shadow" format="boolean" />
        <attr name="top_shadow" format="boolean" />
        <attr name="background_color" format="color" />
    </declare-styleable>-->


    <declare-styleable name="EventView">
        <attr name="tags_visible" />
        <attr name="bottom_shadow" />
        <attr name="top_shadow" />

        <attr name="is_padding" format="boolean" />
        <attr name="is_spot" format="boolean" />
        <attr name="color_spot" format="boolean" />
        <attr name="color_event" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SpotView">
        <attr name="tags_visible" />
        <attr name="bottom_shadow" />
        <attr name="top_shadow" />

        <attr name="edit_mode"  format="boolean"/>
        <attr name="background_color"  format="boolean"/>
        <attr name="gravity_center" format="boolean" />
    </declare-styleable>
</resources>