<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Define here attributes that are going to be called more than once-->
    <attr name="tags_visible" format="boolean" />
    <attr name="bottom_shadow" format="boolean" />
    <attr name="top_shadow" format="boolean" />
    <attr name="toolbar_mode"  format="boolean"/>

    <declare-styleable name="HorizontalTagsRecyclerView">
        <attr name="horizontal_tags_background_color" format="color" />
        <attr name="horizontal_tags_text_color" format="color" />
        <attr name="horizontal_tags_is_bold" format="boolean" />
        <attr name="horizontal_tags_text_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CategorySelectorView">
        <attr name="color_background" format="color" />
    </declare-styleable>

    <!-- SLIDING TABS -->
    <declare-styleable name="SlidingTabLayout">
        <attr name="indicatorColor" format="color"/>
        <attr name="shouldExpand" format="boolean" />
        <attr name="tabBackgroundBase" format="reference" />
        <attr name="tabBackgroundTextViewId" format="reference"/>
    </declare-styleable>


</resources>
