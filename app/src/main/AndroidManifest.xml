<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.timappweb.timapp">

    <!--
    PERMISSIONS
     -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera2" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_GPS" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!--
     FOR GCM
    -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission android:name="com.timappweb.timapp.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.timappweb.timapp.permission.C2D_MESSAGE" />

    <!--android:debuggable="true" has been removed -->
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:largeHeap="true"
        tools:replace="android:theme">


        <!-- DATABASE CONFIGURATION -->
        <meta-data android:name="AA_DB_NAME" android:value="timappweb.timapp.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="1" />
        <meta-data  android:name="AA_MODELS"
            android:value="com.timappweb.timapp.database.models.UserActivity" />


        <!-- GMS -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id"/>

        <!-- SPLACE ACTIVITY //////////////////////////////////////////////-->
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ErrorActivity">
        </activity>

        <!-- EXPLORE ACTIVITY //////////////////////////////////////////////-->

        <activity
            android:name=".activities.DrawerActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:configChanges="orientation|screenSize">
        </activity>

        <!-- LOGIN ACTIVITY //////////////////////////////////////////////-->
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".activities.DrawerActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DrawerActivity" />
        </activity>

        <service
            android:name=".services.FetchAddressIntentService"
            android:exported="false" >
        </service>

        <service android:name=".services.RegistrationIntentService" android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>

        <receiver
            android:name=".receivers.MyGcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.example.gcm" />
            </intent-filter>
        </receiver>

        <!--
        <service android:name=".services.MyInstanceIDListenerService" android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>-->
        <service
            android:name=".services.MyGcmListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <service
            android:name=".services.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>

        <!-- FILTER ACTIVITY //////////////////////////////////////////////-->
        <activity
            android:name=".activities.FilterActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_filter"
            android:parentActivityName=".activities.DrawerActivity">

            <!-- Make activity searchable -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DrawerActivity" />
        </activity>

        <!-- LOCATE ACTIVITY //////////////////////////////////////////////-->
        <activity android:name=".activities.LocateActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.DrawerActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DrawerActivity" />
        </activity>

        <!-- TAG ACTIVITY //////////////////////////////////////////////-->
        <activity android:name=".activities.TagActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.LocateActivity"
            android:windowSoftInputMode="adjustNothing|stateHidden" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.LocateActivity" />
        </activity>

        <!-- PUBLISH ACTIVITY //////////////////////////////////////////////-->
        <activity android:name=".activities.PublishActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing|stateHidden"
            android:parentActivityName=".activities.TagActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TagActivity" />
        </activity>

        <!-- POST ACTIVITY //////////////////////////////////////////////-->
        <activity
            android:name=".activities.PostActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_post"
            android:parentActivityName=".activities.DrawerActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DrawerActivity" />
        </activity>

        <!-- PLACE ACTIVITY //////////////////////////////////////////////-->
        <activity
            android:name=".activities.PlaceActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:label="@string/title_activity_place"
            android:parentActivityName=".activities.DrawerActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DrawerActivity" />
        </activity>

        <!-- CAMERA ACTIVITY //////////////////////////////////////////////-->
        <activity
            android:name="com.desmond.squarecamera.CameraActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_place"
            android:parentActivityName=".activities.DrawerActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DrawerActivity" />
        </activity>

        <!-- Add People ACTIVITY //////////////////////////////////////////////-->
        <activity
            android:name=".activities.InviteFriendsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_invite_friends"
            android:parentActivityName=".activities.PlaceActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.PlaceActivity" />
        </activity>

        <!-- List People ACTIVITY //////////////////////////////////////////////-->
        <activity
            android:name=".activities.ListFriendsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_list_friends"
            android:parentActivityName=".activities.DrawerActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DrawerActivity" />
        </activity>

        <!-- Invitations ACTIVITY //////////////////////////////////////////////-->
        <activity
            android:name=".activities.InvitationsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_invitations"
            android:parentActivityName=".activities.DrawerActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DrawerActivity" />
        </activity>

        <!-- PROFILE ACTIVITY //////////////////////////////////////////////-->
        <activity
            android:name=".activities.ProfileActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_profile"
            android:parentActivityName=".activities.DrawerActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DrawerActivity" />
        </activity>

        <!-- EDIT PROFILE ACTIVITY //////////////////////////////////////////////-->
        <activity
            android:name=".activities.EditProfileActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_edit_profile"
            android:windowSoftInputMode="adjustNothing|stateVisible"
            android:parentActivityName=".activities.ProfileActivity"
            android:theme="@style/EditProfileTheme">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ProfileActivity" />
        </activity>

        <!-- SETTINGS ACTIVITY //////////////////////////////////////////////-->
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".activities.DrawerActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DrawerActivity" />
        </activity>

        <!-- ADDPLACE ACTIVITY //////////////////////////////////////////////-->
        <activity android:name=".activities.AddPlaceActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_add_event"
            android:parentActivityName=".activities.ProfileActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ProfileActivity" />
        </activity>

        <!-- SHARE ACTIVITY //////////////////////////////////////////////-->
        <activity android:name=".activities.ShareActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_share_app"
            android:parentActivityName=".activities.DrawerActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DrawerActivity" />
        </activity>

        <!-- FACEBOOK ACTIVITY //////////////////////////////////////////////-->
        <activity android:name="com.facebook.FacebookActivity"
            android:screenOrientation="portrait"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />

    </application>
</manifest>